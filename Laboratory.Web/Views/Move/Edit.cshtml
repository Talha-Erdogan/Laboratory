@using Laboratory.Web.Business.Common
@using Laboratory.Web.Controllers
@model Laboratory.Web.Models.Move.AddViewModel

@{
    ViewData["Title"] = "Move Edit";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <strong> Move Edit </strong>
            </div>
            <div class="card-body">

                @using (Html.BeginForm("Edit", "Move", FormMethod.Post, new { @class = "form-horizontal input-sm" }))
                {
                    @Html.HiddenFor(m => m.Id)
                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Appliance</label>
                        <div class="col-md-9">
                            @Html.DropDownListFor(m => m.ApplianceId, Model.ApplianceSelectList, "Select", new { @class = "form-control form-control-sm" })
                            @Html.ValidationMessageFor(m => m.ApplianceId, null, new { @class = "help-block text-danger" })
                        </div>
                    </div>

                    <div class="form-group row">
                        <label class="col-md-2 col-form-label">Lab</label>
                        <div class="col-md-9">
                            @Html.DropDownListFor(m => m.LabId, Model.LabSelectList, "Select", new { @class = "form-control form-control-sm" })
                            @Html.ValidationMessageFor(m => m.LabId, null, new { @class = "help-block text-danger" })
                        </div>
                    </div>


                    <div class="form-group row">
                        <div class="col-md-12">
                            <button class="btn btn-sm btn-primary" type="submit" id="btnSubmit" name="SubmitType" value="Edit">
                                <i class="fa fa-dot-circle-o"></i>Save
                            </button>
                            &nbsp;

                            <a class="btn btn-sm btn-danger" href="~/Move/List">
                                <i class="fa fa-ban"></i> Cancel
                            </a>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">

                            @if (ViewBag.ErrorMessage != null && !string.IsNullOrEmpty(ViewBag.ErrorMessage))
                            {
                                <div class="text-danger">
                                    @ViewBag.ErrorMessage
                                </div>
                            }
                            @if (ViewBag.ErrorMessageList != null)
                            {
                                <div class="text-danger">
                                    @foreach (var item in ViewBag.ErrorMessageList)
                                    {
                                        <span>@item</span>
                                        <br />
                                    }
                                </div>
                            }

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- /.col-->
</div>
