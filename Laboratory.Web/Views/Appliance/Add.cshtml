@using Laboratory.Web.Business.Common
@using Laboratory.Web.Controllers

@model Laboratory.Web.Models.Appliance.AddViewModel

@{
    ViewData["Title"] = "Appliance Add";
}

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <strong>Appliance Add</strong>
            </div>
            <div class="card-body">

                @using (Html.BeginForm("Add", "Appliance", FormMethod.Post, new { @class = "form-horizontal input-sm" }))
                {

                    @for (int i = 0; i < Model.Appliances.Count; i++)
                    {
                        <div class="form-group row">
                            <label class="col-md-2 col-form-label">Name</label>
                            <div class="col-md-3">
                                @Html.TextBoxFor(m => Model.Appliances[i].Name, new { @class = "form-control input-sm", @type = "text", @id = ("txtApplianceName" + i) })
                                @Html.ValidationMessageFor(m => Model.Appliances[i].Name, null, new { @class = "help-block text-danger" })
                            </div>

                            <label class="col-md-2 col-form-label">Barcode</label>
                            <div class="col-md-3">
                                @Html.TextBoxFor(m => Model.Appliances[i].Barcode, new { @class = "form-control input-sm", @type = "text", @id = "txtApplianceBarcode" + i })
                                @Html.ValidationMessageFor(m => Model.Appliances[i].Barcode, null, new { @class = "help-block text-danger" })
                            </div>

                            <div class="col-md-2">
                                @if (i > 0)
                                {
                                    <!-- submit butonuna cancel css class tanimi yapilarak client side validation paisf yapilmasi saglaniyor, mvc kendi destekliyor -->
                                    <button class="btn btn-sm btn-danger cancel" type="submit" id="btnDeleteApplianceSerial" name="SubmitType" value="DeleteApplianceSerial@(i)">
                                        <i class="fa fa-dot-circle-o"></i> Delete Appliance
                                    </button>
                                }
                            </div>
                        </div>
                    }

                    <div class="form-group row">
                        <div class="col-md-12">
                            <!-- submit butonuna cancel css class tanimi yapilarak client side validation paisf yapilmasi saglaniyor, mvc kendi destekliyor -->
                            <button class="btn btn-sm btn-primary cancel" type="submit" id="btnAddApplianceSerial" name="SubmitType" value="AddApplianceSerial">
                                <i class="fa fa-dot-circle-o"></i> Add Appliance
                            </button>
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-12">
                            <button class="btn btn-sm btn-primary" type="submit" id="btnSubmit"  name="SubmitType" value="Save">
                                <i class="fa fa-dot-circle-o"></i> Save
                            </button>
                            &nbsp;
                            <a class="btn btn-sm btn-danger" href="~/Appliance/List">
                                <i class="fa fa-ban"></i> Cancel
                            </a>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">

                            @if (ViewBag.ErrorMessage != null && !string.IsNullOrEmpty(ViewBag.ErrorMessage))
                            {
                                <div class="text-danger">
                                    @ViewBag.ErrorMessage
                                </div>
                            }
                            @if (ViewBag.ErrorMessageList != null)
                            {
                                <div class="text-danger">
                                    @foreach (var item in ViewBag.ErrorMessageList)
                                    {
                                        <span>@item</span>
                                        <br />
                                    }
                                </div>
                            }

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
    <!-- /.col-->
</div>


